.v[data-class=v] .vwrap {
    border: 1px solid #f0f0f0;
    border-radius: 4px;
    margin-bottom: 10px;
    overflow: hidden;
    position: relative;
    padding: 10px;
    background: var(--code-color);
}
.v[data-class=v] .vcount {
    padding: 5px;
    font-weight: 600;
    font-size: 1.25em;
}
.v[data-class=v] .vempty {
    padding: 1.25em;
    font-weight: 600;
    text-align: center;
    color: #555;
    overflow: auto;
}
.v[data-class=v] .vwrap .vheader .vinput:focus {
    border-bottom-color: #3eaf7c !important;
}
.v[data-class=v] .vcards .vcard .vhead .vnick {
    position: relative;
    font-size: .875em;
    font-weight: 500;
    margin-right: .875em;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    color: #3eaf7c;
}
.v[data-class=v] .vbtn{
    background: var(--background-color) !important;
    color: var(--text-color) !important;
}
.v[data-class=v] .vbtn:hover{
        border-color: #3eaf7c !important;
        color: #3eaf7c !important;
}
.v[data-class=v] .vcards .vcard .vh .vmeta .vat {
    margin-right: .3rem;
    background: rgba(27,31,35,.05);
    border-radius: .25rem;
    padding: 0 .4rem;
    color: var(--text-color) !important;
    border: 1px solid #eaecef;
    border-color: var(--border-color);
}
.v[data-class=v] .vcards .vcard .vh .vmeta .vat:hover{
          border-color: #3eaf7c !important;
        color: #3eaf7c !important;
  }
.v[data-class=v] .vsys {
  background: rgba(27,31,35,.05);
  background: var(--code-color) !important;
  color: #242424 !important;
}