// .vuepress/public/styles/index.styl
:root{
  --code-color :rgba(27,31,35,.05)
  --background-color:#fff
  --text-color:#242424
  --border-color:#eaecef
}
#valine-vuepress-comment {
  max-width: 750px;
  margin: 0 auto;
}
#valine-vuepress-comment .vheader input[name="link"] {
  display: none;
}

#valine-vuepress-comment .vheader .vinput {
  width: 50%;
}
.page-nav, .page .comments-wrapper, .page .page-edit {
    max-width: 860px;
    margin: 0 auto;
    padding: 2rem 2.5rem;
}
.v[data-class=v] {
    font-size: 16px;
    text-align: left;
}
.v[data-class=v] * {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    line-height: 1.75;
}
